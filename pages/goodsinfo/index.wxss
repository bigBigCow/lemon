/* pages/goodsinfo/index.wxss */
.tab{
  display: flex;
}
.tab navigator{
  flex: 1;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
}
.isActive{
  color: #eb4450;
}
.goodsItem{
  width: 100%;
  display: flex;
}
.goodsItem image{
  flex: 1;
}
.goodsItem .goodsTitle{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  font-size: 26rpx;
  /* vertical-align: top; */
}
.goodsTitle text:first-of-type{
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
